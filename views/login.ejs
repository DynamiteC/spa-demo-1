<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="NoxBuilds Single Page Application">
	<meta name="author" content="">
	<title>Nox Builds</title>
	<link href="/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/normalize.css" rel="stylesheet">
	<link href="/css/signin.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
	<main role="main">
		<section>
			<form class="form-signin" role="form" method="post" action="/login">
				<div class="alert alert-danger col-sm-12" id='danger' style="text-align: center;display:none;"></div>
				<% if (message.length > 0) { %>
				<% if(type=='is-danger') { %>
				<div class="alert alert-danger col-sm-12" style="text-align: center;">
					<%= message %>
				</div>
				<% } else { %>
				<div class="alert alert-success col-sm-12" style="text-align: center;">
					<%= message %>
				</div>
				<% } %>
				<% } %>
				<center><img class="mb-4" src="/images/logo.png" alt="" width="72" height="72"></center>
				<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<label for="login-username" class="sr-only">Email address</label>
				<input type="email" name="user_name" id="login-username" class="form-control" placeholder="Email address" required=""
				 autofocus="">
				<label for="login-password" class="sr-only">Password</label>
				<input type="password" name="password" id="login-password" class="form-control" placeholder="Password" required="">
				<button class="btn btn-lg btn-primary btn-block" id="sign-in" type="submit">Sign in</button>
				<div class="form-group">
					<div class="col-md-12 control">
						<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
							Don't have an account!
							<a href="/signup">
								Sign Up Here
							</a>
						</div>
					</div>
				</div>
			</form>
		</section>
	</main>
	<footer id="footer-wrap">
	</footer>
	<script src="/js/jquery-3.3.1.js"></script>
	<script src="/js/popper.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
	<script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>
	<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
	<script src="/js/ie10-viewport-bug-workaround.js"></script>
	<script src="/js/ie-emulation-modes-warning.js"></script>
	<script src="/js/script.js"></script>
</body>

</html>